<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <GridPane alignment="center" hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
         <ImageView fx:id="imageView" fitHeight="540.0" fitWidth="960.0" pickOnBounds="true" preserveRatio="true" />
      </GridPane>
   </center>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <Label text="Fractales" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Label fx:id="lblFps" text="fps">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Label>
         <Label fx:id="lblIterations" text="iterations">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin>
         </Label>
         <Button fx:id="btnAddIterations" mnemonicParsing="false" text="Add Iterations" />
         <Button fx:id="btnLessIterations" mnemonicParsing="false" text="Less Iterations">
            <VBox.margin>
               <Insets bottom="5.0" top="10.0" />
            </VBox.margin>
         </Button>
         <Label fx:id="lblTime" text="time taken" />
      </VBox>
   </left>
</BorderPane>
